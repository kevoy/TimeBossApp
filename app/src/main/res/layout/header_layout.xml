<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ff6cabff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/title_nav">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="Time Boss"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#323031"
        android:layout_below="@+id/title_nav"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:id="@+id/nav_bar">


        <Button
            android:id="@+id/timetable_tab"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="TimeTable"
            android:textColor = "#fff"
            android:background="@drawable/bordebtm"
            />
        <Button
            android:id="@+id/tasks_tab"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Tasks"
            android:textColor = "#fff"
            android:background="#00ffffff"
            />
        <Button
            android:id="@+id/activities_tab"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Activities"
            android:textColor = "#fff"
            android:background="#00ffffff"
            />
        <Button
            android:id="@+id/settings_tab"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="Settings"
            android:textColor = "#fff"
            android:background="#00ffffff"
            />
    </LinearLayout>
</LinearLayout>